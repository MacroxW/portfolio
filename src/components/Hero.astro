---
const personalImageAlt = "Marcos Wendy";
import Badge from "@/components/ui/Badge.astro";
import LinkedInIcon from "@/components/icons/LinkedIn.astro";
import MailIcon from "@/components/icons/Mail.astro";
import SocialPill from "@/components/ui/SocialPill.astro";
import config from "@/config";

const { email, linkedin } = config;
---

<div class="max-w-xl">
    <div class="flex gap-4 mb-4">
        <img
            class="rounded-full shadow-lg size-16"
            src="/profile.png"
            alt={personalImageAlt}
        />
        <a
            href="https://linkedin.com/in/marcoswendy"
            target="_blank"
            rel="noopener"
            class="flex items-center transition md:justify-center md:hover:scale-105"
        >
            <Badge status="employed">Actualmente trabajando</Badge>
        </a>
    </div>
    <h1
        class="typewriter text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white pb-1"
    >
        Hola! Soy Marcos Wendy
    </h1>
    <p
        class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
    >
        +6 años de experiencia. <strong
            >Estudiante de Cs. de la computación</strong
        > Argentina. Especializado en el desarrollo de aplicaciones web
    </p>
    <nav class="flex flex-wrap gap-4 mt-8">
        <SocialPill href=`mailto:${email}`>
            <MailIcon class="size-4" />
            Contacto
        </SocialPill>
        <SocialPill href={linkedin}>
            <LinkedInIcon class="size-4" />
            LinkedIn
        </SocialPill>
    </nav>
</div>

<style>
    .typewriter {
        overflow: hidden;
        white-space: nowrap;
        animation: typing 0.9s steps(150, end);
    }

    /* The typing effect */
    @keyframes typing {
        from {
            width: 0;
        }
        to {
            width: 100%;
        }
    }
</style>
